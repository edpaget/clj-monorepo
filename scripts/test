#!/bin/bash

# Test runner script for Clojure monorepo

set -e

SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )"
ROOT_DIR="$(dirname "$SCRIPT_DIR")"

cd "$ROOT_DIR"

if [ "$1" = "all" ]; then
    echo "Running tests for all projects..."
    clojure -X build/build.clj test-all
elif [ -n "$1" ]; then
    if [ -d "$1" ] && [ -f "$1/deps.edn" ]; then
        echo "Running tests for project: $1"
        cd "$1"
        clojure -X:test
    else
        echo "Error: Project '$1' not found or missing deps.edn"
        exit 1
    fi
else
    echo "Usage: $0 [all|<project-name>]"
    echo ""
    echo "Examples:"
    echo "  $0 all           # Run tests for all projects"
    echo "  $0 my-lib        # Run tests for specific project"
    exit 1
fi